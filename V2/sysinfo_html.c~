#include <sys/sysinfo.h>
#include <unistd.h>
#include <stdio.h>
#include <stdlib.h>

int main (){
 

  int days, hours, mins;
  struct sysinfo sys_info;

  if(sysinfo(&sys_info) != 0){
    perror("Can't get sysinfo!");
    return 0;
  }
  days = sys_info.uptime / 86400;
  hours = (sys_info.uptime / 3600) - (days * 24);
  mins = (sys_info.uptime / 60) - (days * 1440) - (hours * 60);

  printf("<table><tr><td>Uptime<td><td>Total Ram</td> <td>Free RAM</td><td>Process count</td><td>Page size</td></tr> ");
  printf("<tr><td> %ddays, %dhours, %dminutes, %ldseconds\n",
         days, hours, mins, sys_info.uptime % 60);
  
  printf("<td>%ld</td>\n", sys_info.totalram);
  printf("<td>%ld</td>\n", sys_info.freeram);
  printf("<td>%d</td>\n", sys_info.procs);
  printf("<td>%ldByte</td></table>\n", sysconf(_SC_PAGESIZE));
  return 0;
}
